# Production Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://salonpro_user:your_secure_password@localhost:5432/salonpro
PGHOST=localhost
PGPORT=5432
PGUSER=salonpro_user
PGPASSWORD=your_secure_password
PGDATABASE=salonpro

# Application Configuration
NODE_ENV=production
PORT=3000

# Session Secret (generate a secure random string)
SESSION_SECRET=your_very_secure_session_secret_here_min_32_characters

# Communication API Keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
MSG91_API_KEY=your_msg91_api_key_here
MSG91_SENDER_ID=your_sender_id

# WhatsApp Business API (Ultramsg)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_INSTANCE_ID=your_instance_id
WHATSAPP_BASE_URL=https://api.ultramsg.com

# SMTP Settings (if not using SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/var/www/salonpro/uploads

# Security Settings
CORS_ORIGIN=https://your-domain.com
TRUST_PROXY=true

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/salonpro/app.log